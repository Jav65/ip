<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="450.0" styleClass="root" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stewie.gui.MainWindow">
    <children>
        <!-- Header with app title and status -->
        <VBox layoutY="0.0" prefWidth="450.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: rgba(0, 0, 0, 0.0);">
                    <children>
                        <Label text="Stewie Task Assistant" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: rgba(255, 255, 255, 0.8); -fx-font-size: 12px;">
                            <HBox.margin>
                                <Insets top="10.0" bottom="5.0" left="20.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                    <padding>
                        <Insets left="20.0" right="20.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>

        <!-- Main chat area with proper scroll configuration -->
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" layoutY="50.0" prefHeight="580.0" prefWidth="450.0"  AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
            <content>
                <VBox fx:id="dialogContainer" minHeight="-Infinity" prefWidth="430.0" spacing="8.0" styleClass="dialog-container">
                    <padding>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>

        <!-- Input area with modern design -->
        <HBox layoutY="630.0" prefHeight="70.0" prefWidth="450.0" spacing="12.0" style="-fx-background-color: rgba(0, 0, 0, 0.1); -fx-border-color: rgba(255, 255, 255, 0.2); -fx-border-width: 1px 0 0 0;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="45.0" HBox.hgrow="ALWAYS" promptText="Type your command here... (e.g., 'todo read book')">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextField>
                <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleUserInput" prefHeight="45.0" prefWidth="100.0" text="Send" />
            </children>
            <padding>
                <Insets bottom="12.0" left="20.0" right="20.0" top="12.0" />
            </padding>
        </HBox>
    </children>
</AnchorPane>